doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    block content
    h1  Recently posted messages
    
    
    form(action="/message" method="post")
        label(for='message') Send a message!
        input#message(type='text', name='message')
        button(type='submit') Send! 
      
